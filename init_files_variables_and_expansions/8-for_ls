#!/usr/bin/env bash
# This script lists files in the current directory
# Only displays the part of the name after the first dash

for file in *; do
    # Skip hidden files
    if [[ $file == .* ]]; then
        continue
    fi

    # Check if the file name contains a dash
    if [[ $file == *-* ]]; then
        # Remove everything before the first dash
        echo "${file#*-}"
    else
        # If no dash, print the file name as is
        echo "$file"
    fi
done
