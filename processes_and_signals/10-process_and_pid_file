#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely
# Handles PID file creation and signals: SIGTERM, SIGINT, SIGQUIT

PID_FILE="/var/run/myscript.pid"

# Save its own PID
echo $$ > "$PID_FILE"

# Function to handle SIGTERM and SIGQUIT
terminate() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Function to handle SIGINT
interrupt() {
    echo "Y U no love me?!"
}

# Trap signals
trap terminate SIGTERM SIGQUIT
trap interrupt SIGINT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
